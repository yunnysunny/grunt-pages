extends ../../layouts/base
block content
  ul
    each post in posts
      li
        span Posted on #{post.date}
        br
        a(href = "/#{post.url}") #{post.title}
    a(href = "/#{baseUrl}/") Blog
    - for (i = 1; i < numPages; i++) {
    - if (i === numPages)
        if pageNumber
          span #{pageNumber}
      else
        a(href = "/#{baseUrl}/page/#{i}/") #{i}
    - }
